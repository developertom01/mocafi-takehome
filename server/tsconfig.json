{
  "compilerOptions": {
    "target": "ES2016", // Compile to ES2016-compatible JavaScript
    "module": "commonjs", // Use CommonJS modules (Node.js compatible)
    "rootDir": ".", // Source code directory
    "outDir": "./build", // Output directory for compiled files
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "strict": true, // Enable strict type-checking
    "skipLibCheck": true // Skip type checks for declaration files
  },
  "include": ["src/**/*.ts", "bin/**/*.ts"], // Include source files
  "exclude": ["node_modules", "build"] // Exclude unnecessary folders
}
